{
  "openapi": "3.1.0",
  "info": {
    "title": "Noah Memory API",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "https://noah-engine.onrender.com"
    }
  ],
  "paths": {
    "/memory/add": { ... },
    "/memory/list": { ... },
    "/memory/get": { ... },
    "/memory/delete": { ... },
    "/recording/search": { ... },
    "/recording/add": {
      "post": {
        "operationId": "addRecording",
        "summary": "Add a new recording",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddRecordingRequest"
              },
              "example": {
                "id": "rec123",
                "date": "2025-08-01T10:00:00Z",
                "participants": ["יוסי", "נועה"],
                "transcript": "שיחה עם יוסי על הפרויקט החדש.",
                "summary": "פגישה עם יוסי בנושא הפרויקט."
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    },
    "schemas": {
      ...,
      "AddRecordingRequest": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "date": { "type": "string", "format": "date-time" },
          "participants": {
            "type": "array",
            "items": { "type": "string" }
          },
          "transcript": { "type": "string" },
          "summary": { "type": "string" }
        },
        "required": ["id", "date", "participants", "transcript", "summary"],
        "additionalProperties": false
      }
    }
  }
}
